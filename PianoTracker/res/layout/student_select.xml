    <Spinner android:id="@+id/spinner1" android:layout_width="wrap_content" android:layout_height="wrap_content"></Spinner>
    <LinearLayout android:layout_width="match_parent" android:id="@+id/linearLayout1" android:layout_height="wrap_content" android:gravity="center|bottom">
        <Button android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/btn_continue" android:text="@string/cont"></Button>
    </LinearLayout>
</LinearLayout>
